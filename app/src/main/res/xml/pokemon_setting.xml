<?xml version="1.0" encoding="utf-8"?>
<PreferenceScreen
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <PreferenceCategory
        app:title="常规设置">

        <ListPreference
            app:key="choose_mode"
            app:title="默认搜索模式"
            app:entries="@array/search_pokemon_mode"
            app:entryValues="@array/search_pokemon_value"
            app:defaultValue="@integer/default_mode"
            app:useSimpleSummaryProvider="true"/>
    </PreferenceCategory>
</PreferenceScreen>
