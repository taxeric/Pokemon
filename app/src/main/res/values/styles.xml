<resources>
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <declare-styleable name="ProgressTextView">
        <attr name="base_value" format="integer" />
        <attr name="max_value" format="integer" />
        <attr name="fill_color" format="color" />
        <attr name="text" format="string" />
        <attr name="text_color" format="color" />
        <attr name="background_line_color" format="color" />
        <attr name="animation_duration" format="integer" />
    </declare-styleable>

</resources>